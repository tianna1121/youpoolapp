<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/poolname"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_toRightOf="@+id/imageView"/>

    <TextView
        android:id="@+id/poolnblk"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_toRightOf="@+id/poolname"/>

    <TextView
        android:id="@+id/poolpblk"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_toRightOf="@+id/poolnblk"/>

    <TextView
        android:id="@+id/poolpayt"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_toRightOf="@+id/poolpblk"/>

    <TextView
        android:id="@+id/poolminers"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_toRightOf="@+id/poolpayt"/>

    <TextView
        android:id="@+id/poolnhash"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_toRightOf="@+id/poolminers"/>

    <TextView
        android:id="@+id/poolphash"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_toRightOf="@+id/poolnhash"/>

</RelativeLayout>
